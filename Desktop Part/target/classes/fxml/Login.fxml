<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.kna.controller.LoginController"
            styleClass="auth-container">
    
    <center>
        <VBox alignment="CENTER" spacing="0" styleClass="auth-card">
            <!-- Logo/Brand Section -->
            <VBox alignment="CENTER" spacing="8" styleClass="auth-header">
                <Label text="ðŸŽ“" style="-fx-font-size: 48px;"/>
                <Label text="KnA Platform" styleClass="auth-title"/>
                <Label text="Knowledge &amp; Answers" styleClass="auth-subtitle"/>
            </VBox>
            
            <!-- Login Form -->
            <VBox spacing="16" styleClass="auth-form">
                <VBox spacing="6">
                    <Label text="Username" styleClass="input-label"/>
                    <TextField fx:id="usernameField" promptText="Enter your username" styleClass="input-field"/>
                </VBox>
                
                <VBox spacing="6">
                    <Label text="Password" styleClass="input-label"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="input-field"/>
                </VBox>
                
                <!-- Role Selection -->
                <VBox spacing="8">
                    <Label text="Login as" styleClass="input-label"/>
                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <fx:define>
                            <ToggleGroup fx:id="loginTypeGroup"/>
                        </fx:define>
                        <RadioButton fx:id="userRadioButton" text="User" toggleGroup="$loginTypeGroup" selected="true" styleClass="radio-option"/>
                        <RadioButton fx:id="adminRadioButton" text="Admin" toggleGroup="$loginTypeGroup" styleClass="radio-option"/>
                    </HBox>
                </VBox>
                
                <!-- Error Message -->
                <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>
                
                <!-- Login Button -->
                <Button text="Sign In" onAction="#handleLogin" styleClass="primary-button auth-button" maxWidth="Infinity"/>
                
                <!-- Register Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Don't have an account?" styleClass="auth-link-text"/>
                    <Hyperlink text="Sign Up" onAction="#goToRegister" styleClass="auth-link"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
