<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.kna.controller.LoginController"
            stylesheets="@../css/application.css">
    
    <center>
        <VBox alignment="CENTER" spacing="20" style="-fx-background-color: #F5F5F5;">
            <padding>
                <Insets top="50" right="50" bottom="50" left="50"/>
            </padding>
            
            <VBox alignment="CENTER" spacing="30" styleClass="card" maxWidth="450">
                <padding>
                    <Insets top="40" right="40" bottom="40" left="40"/>
                </padding>
                
                <!-- Logo/Title -->
                <Label text="KnA" styleClass="label-title" style="-fx-text-fill: #2196F3;">
                    <font>
                        <Font size="36" name="System Bold"/>
                    </font>
                </Label>
                
                <Label text="Knowledge and Answers" styleClass="label-secondary"/>
                
                <Separator prefWidth="200"/>
                
                <!-- Login Form -->
                <VBox spacing="15" prefWidth="350">
                    <Label text="Login as"/>
                    <HBox spacing="30" alignment="CENTER_LEFT">
                        <RadioButton fx:id="userRadioButton" text="User" selected="true">
                            <toggleGroup>
                                <ToggleGroup fx:id="loginTypeGroup"/>
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton fx:id="adminRadioButton" text="Admin" toggleGroup="$loginTypeGroup"/>
                    </HBox>
                    
                    <Label text="Email"/>
                    <TextField fx:id="emailField" promptText="Enter your email"/>
                    
                    <Label text="Password"/>
                    <PasswordField fx:id="passwordField" promptText="Enter your password"/>
                    
                    <Label fx:id="errorLabel" styleClass="error-text" visible="false"/>
                    
                    <Button fx:id="loginButton" text="Login" onAction="#handleLogin" 
                            prefWidth="350" prefHeight="40">
                        <font>
                            <Font size="14" name="System Bold"/>
                        </font>
                    </Button>
                    
                    <HBox alignment="CENTER" spacing="5">
                        <Label text="Don't have an account?" styleClass="label-secondary"/>
                        <Hyperlink fx:id="registerLink" text="Register here" onAction="#handleRegister"
                                  style="-fx-text-fill: #2196F3;"/>
                    </HBox>
                </VBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
