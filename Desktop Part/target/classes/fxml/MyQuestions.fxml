<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="0" stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kna.controller.MyQuestionsController" style="-fx-background-color: #F0F2F5;">
    
    <!-- Page Header -->
    <HBox alignment="CENTER_LEFT" spacing="15" style="-fx-background-color: white; -fx-padding: 20px 25px; -fx-border-color: #E8E8E8; -fx-border-width: 0 0 1px 0;">
        <Label text="ðŸ“ My Questions" styleClass="page-title"/>
        <Region HBox.hgrow="ALWAYS"/>
    </HBox>
    
    <!-- Stats Bar -->
    <HBox alignment="CENTER" spacing="40" style="-fx-background-color: white; -fx-padding: 15px 25px; -fx-border-color: #E8E8E8; -fx-border-width: 0 0 1px 0;">
        <VBox alignment="CENTER" spacing="4">
            <Label text="Total Questions" styleClass="stat-label"/>
            <Label fx:id="totalQuestionsLabel" text="0" styleClass="stat-value-large"/>
        </VBox>
        <VBox alignment="CENTER" spacing="4">
            <Label text="With Answers" styleClass="stat-label"/>
            <Label fx:id="answeredQuestionsLabel" text="0" styleClass="stat-value-large" style="-fx-text-fill: #4CAF50;"/>
        </VBox>
        <VBox alignment="CENTER" spacing="4">
            <Label text="Pending" styleClass="stat-label"/>
            <Label fx:id="pendingQuestionsLabel" text="0" styleClass="stat-value-large" style="-fx-text-fill: #FF9800;"/>
        </VBox>
        <VBox alignment="CENTER" spacing="4">
            <Label text="Total Coins Spent" styleClass="stat-label"/>
            <Label fx:id="totalCoinsSpentLabel" text="0" styleClass="stat-value-large" style="-fx-text-fill: #2196F3;"/>
        </VBox>
    </HBox>
    
    <!-- Filter Tabs -->
    <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: white; -fx-padding: 12px 25px; -fx-border-color: #E8E8E8; -fx-border-width: 0 0 1px 0;">
        <Button fx:id="allFilterBtn" text="All" onAction="#filterAll" styleClass="filter-tab"/>
        <Button fx:id="answeredFilterBtn" text="Answered" onAction="#filterAnswered" styleClass="filter-tab"/>
        <Button fx:id="pendingFilterBtn" text="Pending" onAction="#filterPending" styleClass="filter-tab"/>
        <Button fx:id="urgentFilterBtn" text="Urgent" onAction="#filterUrgent" styleClass="filter-tab"/>
    </HBox>
    
    <!-- Questions List -->
    <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS" style="-fx-background-color: transparent; -fx-background: transparent;">
        <VBox fx:id="questionsContainer" spacing="15" style="-fx-background-color: transparent;">
            <padding>
                <Insets bottom="25" left="25" right="25" top="25"/>
            </padding>
        </VBox>
    </ScrollPane>
</VBox>
