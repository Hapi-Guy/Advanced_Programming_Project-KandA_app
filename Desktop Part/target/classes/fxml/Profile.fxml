<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.kna.controller.ProfileController"
            styleClass="root-pane">
    
    <!-- Top Bar -->
    <top>
        <HBox styleClass="top-bar" alignment="CENTER_LEFT" spacing="15">
            <padding>
                <Insets top="15" right="20" bottom="15" left="20"/>
            </padding>
            
            <Button fx:id="backButton" text="â† Back" styleClass="secondary-button" onAction="#goBack"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Label text="My Profile" styleClass="page-title"/>
            <Region HBox.hgrow="ALWAYS"/>
        </HBox>
    </top>
    
    <!-- Main Content -->
    <center>
        <ScrollPane fitToWidth="true" styleClass="scroll-pane">
            <VBox spacing="20" styleClass="content-container">
                <padding>
                    <Insets top="30" right="40" bottom="30" left="40"/>
                </padding>
                
                <!-- Profile Header Card -->
                <VBox styleClass="card" spacing="15">
                    <padding>
                        <Insets top="25" right="25" bottom="25" left="25"/>
                    </padding>
                    
                    <HBox alignment="CENTER_LEFT" spacing="20">
                        <!-- Avatar Placeholder -->
                        <StackPane styleClass="avatar-large">
                            <Label fx:id="avatarLabel" styleClass="avatar-text-large"/>
                        </StackPane>
                        
                        <VBox spacing="5">
                            <Label fx:id="nameLabel" styleClass="profile-name"/>
                            <Label fx:id="emailLabel" styleClass="profile-email"/>
                            <HBox spacing="15">
                                <HBox styleClass="coin-badge" spacing="5" alignment="CENTER">
                                    <Label text="ðŸ’°" styleClass="badge-icon"/>
                                    <Label fx:id="coinsLabel" styleClass="badge-text"/>
                                </HBox>
                                <HBox styleClass="reputation-badge" spacing="5" alignment="CENTER">
                                    <Label text="â­" styleClass="badge-icon"/>
                                    <Label fx:id="reputationLabel" styleClass="badge-text"/>
                                </HBox>
                            </HBox>
                        </VBox>
                    </HBox>
                </VBox>
                
                <!-- Statistics Card -->
                <VBox styleClass="card" spacing="15">
                    <padding>
                        <Insets top="20" right="25" bottom="20" left="25"/>
                    </padding>
                    
                    <Label text="Statistics" styleClass="section-title"/>
                    <Separator/>
                    
                    <GridPane hgap="30" vgap="15">
                        <!-- Questions Asked -->
                        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <Label text="Questions Asked" styleClass="stat-label"/>
                            <Label fx:id="questionsAskedLabel" styleClass="stat-value"/>
                        </VBox>
                        
                        <!-- Answers Given -->
                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <Label text="Answers Given" styleClass="stat-label"/>
                            <Label fx:id="answersGivenLabel" styleClass="stat-value"/>
                        </VBox>
                        
                        <!-- Accepted Answers -->
                        <VBox spacing="5" GridPane.columnIndex="0" GridPane.rowIndex="1">
                            <Label text="Accepted Answers" styleClass="stat-label"/>
                            <Label fx:id="acceptedAnswersLabel" styleClass="stat-value"/>
                        </VBox>
                        
                        <!-- Acceptance Rate -->
                        <VBox spacing="5" GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <Label text="Acceptance Rate" styleClass="stat-label"/>
                            <Label fx:id="acceptanceRateLabel" styleClass="stat-value"/>
                        </VBox>
                    </GridPane>
                </VBox>
                
                <!-- Editable Information Card -->
                <VBox styleClass="card" spacing="15">
                    <padding>
                        <Insets top="20" right="25" bottom="20" left="25"/>
                    </padding>
                    
                    <Label text="Personal Information" styleClass="section-title"/>
                    <Separator/>
                    
                    <GridPane hgap="15" vgap="15">
                        <!-- Name -->
                        <Label text="Full Name:" styleClass="form-label" 
                               GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <TextField fx:id="nameField" promptText="Enter your full name"
                                  GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <!-- Email (Read-only) -->
                        <Label text="Email:" styleClass="form-label" 
                               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <TextField fx:id="emailField" editable="false" styleClass="readonly-field"
                                  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        
                        <!-- Phone -->
                        <Label text="Phone:" styleClass="form-label" 
                               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <TextField fx:id="phoneField" promptText="Enter phone number"
                                  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                        
                        <!-- Department -->
                        <Label text="Department:" styleClass="form-label" 
                               GridPane.columnIndex="0" GridPane.rowIndex="3"/>
                        <ComboBox fx:id="departmentCombo" promptText="Select Department"
                                 GridPane.columnIndex="1" GridPane.rowIndex="3"/>
                        
                        <!-- Academic Year -->
                        <Label text="Academic Year:" styleClass="form-label" 
                               GridPane.columnIndex="0" GridPane.rowIndex="4"/>
                        <ComboBox fx:id="yearCombo" promptText="Select Year"
                                 GridPane.columnIndex="1" GridPane.rowIndex="4"/>
                    </GridPane>
                    
                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <padding>
                            <Insets top="10"/>
                        </padding>
                        <Button text="Cancel" styleClass="secondary-button" onAction="#cancelEdit"/>
                        <Button text="Save Changes" styleClass="primary-button" onAction="#saveProfile"/>
                    </HBox>
                </VBox>
                
                <!-- Change Password Card -->
                <VBox styleClass="card" spacing="15">
                    <padding>
                        <Insets top="20" right="25" bottom="20" left="25"/>
                    </padding>
                    
                    <Label text="Change Password" styleClass="section-title"/>
                    <Separator/>
                    
                    <GridPane hgap="15" vgap="15">
                        <Label text="Current Password:" styleClass="form-label" 
                               GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                        <PasswordField fx:id="currentPasswordField" promptText="Enter current password"
                                      GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                        
                        <Label text="New Password:" styleClass="form-label" 
                               GridPane.columnIndex="0" GridPane.rowIndex="1"/>
                        <PasswordField fx:id="newPasswordField" promptText="Enter new password"
                                      GridPane.columnIndex="1" GridPane.rowIndex="1"/>
                        
                        <Label text="Confirm Password:" styleClass="form-label" 
                               GridPane.columnIndex="0" GridPane.rowIndex="2"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="Confirm new password"
                                      GridPane.columnIndex="1" GridPane.rowIndex="2"/>
                    </GridPane>
                    
                    <HBox spacing="15" alignment="CENTER_RIGHT">
                        <padding>
                            <Insets top="10"/>
                        </padding>
                        <Button text="Change Password" styleClass="primary-button" onAction="#changePassword"/>
                    </HBox>
                </VBox>
                
            </VBox>
        </ScrollPane>
    </center>
    
</BorderPane>
