<BorderPane stylesheets="@../css/application.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.kna.controller.DashboardController">

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_LEFT" prefHeight="60" spacing="20" styleClass="top-bar">
            <padding>
                <Insets bottom="10" left="20" right="20" top="10" />
            </padding>

            <Label style="-fx-font-size: 24px; -fx-font-weight: bold; -fx-text-fill: #2196F3;" text="KnA" />

            <Region HBox.hgrow="ALWAYS" />

            <!-- Search Bar -->
            <HBox alignment="CENTER_LEFT" spacing="10" style="-fx-background-color: #F5F5F5; -fx-background-radius: 20px; -fx-padding: 8px 15px;">
                <TextField fx:id="searchField" prefWidth="250" promptText="Search questions..." style="-fx-background-color: transparent; -fx-border-width: 0;" />
                <Button onAction="#handleSearch" style="-fx-background-color: transparent;" text="ðŸ”" />
            </HBox>

            <!-- Coin Balance -->
            <HBox alignment="CENTER" spacing="5" styleClass="coin-display">
                <Label text="ðŸ’°" />
                <Label fx:id="coinLabel" text="100" />
            </HBox>

            <!-- Reputation -->
            <HBox alignment="CENTER" spacing="5" styleClass="reputation-display">
                <Label text="â­" />
                <Label fx:id="reputationLabel" text="0" />
            </HBox>

            <!-- Notifications -->
            <StackPane>
                <Button onAction="#handleNotifications" style="-fx-background-color: transparent; -fx-font-size: 20px;" text="ðŸ””" />
                <Label fx:id="notificationBadge" styleClass="notification-badge" visible="false" StackPane.alignment="TOP_RIGHT" />
            </StackPane>

            <!-- Profile -->
            <Button fx:id="profileButton" onAction="#handleProfile" style="-fx-background-color: #2196F3; -fx-text-fill: white; -fx-background-radius: 20px; -fx-padding: 8px 15px;" />
        </HBox>
    </top>

    <!-- Left Sidebar Navigation -->
    <left>
        <VBox prefWidth="220" spacing="5" styleClass="nav-sidebar">
            <padding>
                <Insets bottom="20" left="0" right="0" top="20" />
            </padding>

            <Button alignment="CENTER_LEFT" onAction="#showHome" prefWidth="220" styleClass="nav-item" text="ðŸ  Home" />
            <Button alignment="CENTER_LEFT" onAction="#showAskQuestion" prefWidth="220" styleClass="nav-item" text="â“ Ask Question" />
            <Button alignment="CENTER_LEFT" onAction="#showMyQuestions" prefWidth="220" styleClass="nav-item" text="ðŸ“ My Questions" />
            <Button alignment="CENTER_LEFT" onAction="#showMyAnswers" prefWidth="220" styleClass="nav-item" text="ðŸ’¬ My Answers" />
            <Button alignment="CENTER_LEFT" onAction="#showLeaderboard" prefWidth="220" styleClass="nav-item" text="ðŸ† Leaderboard" />
            <Button alignment="CENTER_LEFT" onAction="#showCoinPurchase" prefWidth="220" styleClass="nav-item" text="ðŸ›’ Buy Coins" />

            <Separator />

            <Button fx:id="adminPanelButton" alignment="CENTER_LEFT" onAction="#showAdminPanel" prefWidth="220" styleClass="nav-item" text="âš™ï¸ Admin Panel" visible="false" />

            <Region VBox.vgrow="ALWAYS" />

            <Button alignment="CENTER_LEFT" onAction="#handleLogout" prefWidth="220" style="-fx-background-color: #D32F2F;" styleClass="nav-item" text="ðŸšª Logout" />
        </VBox>
    </left>

    <!-- Main Content Area -->
    <center>
        <StackPane fx:id="contentArea" style="-fx-background-color: #F5F5F5;">
            <!-- Default: Question Feed -->
            <ScrollPane fx:id="homeScrollPane" fitToWidth="true" style="-fx-background-color: transparent;">
                <VBox spacing="20">
                    <padding>
                        <Insets bottom="20" left="20" right="20" top="20" />
                    </padding>
                    
                    <!-- Filters -->
                    <HBox alignment="CENTER_LEFT" spacing="15" styleClass="card">
                        <Label style="-fx-font-weight: bold;" text="Filters:" />

                        <Label text="Category:" />
                        <ComboBox fx:id="categoryFilter" onAction="#applyFilters" prefWidth="150" />

                        <CheckBox fx:id="urgentOnlyCheckbox" onAction="#applyFilters" text="Urgent Only" />
                        <CheckBox fx:id="unansweredOnlyCheckbox" onAction="#applyFilters" text="Unanswered Only" />

                        <Region HBox.hgrow="ALWAYS" />
                    </HBox>

                    <!-- Question Feed -->
                    <VBox fx:id="questionFeedContainer" spacing="15" />
                </VBox>
            </ScrollPane>
        </StackPane>
    </center>
</BorderPane>
