<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="com.kna.controller.RegisterController"
            styleClass="auth-container">
    
    <center>
        <VBox alignment="CENTER" spacing="0" styleClass="auth-card">
            <!-- Logo/Brand Section -->
            <VBox alignment="CENTER" spacing="8" styleClass="auth-header">
                <Label text="ðŸŽ“" style="-fx-font-size: 42px;"/>
                <Label text="Create Account" styleClass="auth-title"/>
                <Label text="Join the KnA community" styleClass="auth-subtitle"/>
            </VBox>
            
            <!-- Register Form -->
            <VBox spacing="14" styleClass="auth-form">
                <VBox spacing="6">
                    <Label text="Username" styleClass="input-label"/>
                    <TextField fx:id="usernameField" promptText="Choose a username" styleClass="input-field"/>
                </VBox>
                
                <VBox spacing="6">
                    <Label text="Email" styleClass="input-label"/>
                    <TextField fx:id="emailField" promptText="Enter your email" styleClass="input-field"/>
                </VBox>
                
                <VBox spacing="6">
                    <Label text="Password" styleClass="input-label"/>
                    <PasswordField fx:id="passwordField" promptText="Create a password" styleClass="input-field"/>
                </VBox>
                
                <VBox spacing="6">
                    <Label text="Confirm Password" styleClass="input-label"/>
                    <PasswordField fx:id="confirmPasswordField" promptText="Confirm your password" styleClass="input-field"/>
                </VBox>
                
                <!-- Error Message -->
                <Label fx:id="errorLabel" styleClass="error-label" wrapText="true"/>
                
                <!-- Register Button -->
                <Button text="Create Account" onAction="#handleRegister" styleClass="primary-button auth-button" maxWidth="Infinity"/>
                
                <!-- Login Link -->
                <HBox alignment="CENTER" spacing="5">
                    <Label text="Already have an account?" styleClass="auth-link-text"/>
                    <Hyperlink text="Sign In" onAction="#goToLogin" styleClass="auth-link"/>
                </HBox>
            </VBox>
        </VBox>
    </center>
</BorderPane>
