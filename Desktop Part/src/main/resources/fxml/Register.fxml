<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.kna.controller.RegisterController"
            stylesheets="@../css/application.css">
    
    <center>
        <ScrollPane fitToWidth="true" style="-fx-background-color: #F5F5F5;">
            <VBox alignment="CENTER" spacing="20">
                <padding>
                    <Insets top="50" right="50" bottom="50" left="50"/>
                </padding>
                
                <VBox alignment="CENTER" spacing="25" styleClass="card" maxWidth="500">
                    <padding>
                        <Insets top="40" right="40" bottom="40" left="40"/>
                    </padding>
                    
                    <!-- Title -->
                    <Label text="Create Account" styleClass="label-title" style="-fx-text-fill: #2196F3;">
                        <font>
                            <Font size="28" name="System Bold"/>
                        </font>
                    </Label>
                    
                    <Separator prefWidth="200"/>
                    
                    <!-- Registration Form -->
                    <VBox spacing="12" prefWidth="400">
                        <Label text="Full Name *"/>
                        <TextField fx:id="nameField" promptText="Enter your full name"/>
                        
                        <Label text="Email *"/>
                        <TextField fx:id="emailField" promptText="Enter your email"/>
                        
                        <Label text="Phone"/>
                        <TextField fx:id="phoneField" promptText="Enter your phone number (optional)"/>
                        
                        <Label text="Password *"/>
                        <PasswordField fx:id="passwordField" promptText="At least 6 characters"/>
                        
                        <Label text="Confirm Password *"/>
                        <PasswordField fx:id="confirmPasswordField" promptText="Re-enter password"/>
                        
                        <Label text="Department *"/>
                        <ComboBox fx:id="departmentComboBox" promptText="Select your department" prefWidth="400"/>
                        
                        <Label text="Academic Year *"/>
                        <ComboBox fx:id="yearComboBox" promptText="Select your year" prefWidth="400"/>
                        
                        <Label fx:id="errorLabel" styleClass="error-text" visible="false" wrapText="true"/>
                        <Label fx:id="successLabel" styleClass="success-text" visible="false" wrapText="true"/>
                        
                        <Button fx:id="registerButton" text="Register" onAction="#handleRegister" 
                                prefWidth="400" prefHeight="40" styleClass="button-success">
                            <font>
                                <Font size="14" name="System Bold"/>
                            </font>
                        </Button>
                        
                        <HBox alignment="CENTER" spacing="5">
                            <Label text="Already have an account?" styleClass="label-secondary"/>
                            <Hyperlink fx:id="loginLink" text="Login here" onAction="#handleLogin"
                                      style="-fx-text-fill: #2196F3;"/>
                        </HBox>
                    </VBox>
                </VBox>
            </VBox>
        </ScrollPane>
    </center>
</BorderPane>
